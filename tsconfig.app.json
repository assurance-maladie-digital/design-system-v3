{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/*"],
			"@tests/*": ["./tests/*"]
		},
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "noEmit": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "./**/*.stories.ts"]
}
