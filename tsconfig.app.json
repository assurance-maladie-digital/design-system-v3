{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "dev/**/*.ts", "dev/**/*.vue", "lib/**/*", "lib/**/*.vue"],
  "exclude": ["lib/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
			"@/*": ["lib/*"],
			"@tests/*": ["./tests/*"]
		},
  }
}
