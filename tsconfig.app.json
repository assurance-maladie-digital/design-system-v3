{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "include": [
    "dev/**/*",
    "dev/**/*.vue",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "tests/**/*",
    "package.json"
  ]
}