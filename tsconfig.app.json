{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "./lib",
    "paths": {
      "@/*": ["lib/*"],
			"@tests/*": ["./tests/*"]
		},
    "declaration": true,
    "declarationDir": "./types",
    "noEmit": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
  },
  "include": ["env.d.ts", "lib/**/*", "lib/**/*.vue"],
  "exclude": ["lib/**/__tests__/*"]
}
